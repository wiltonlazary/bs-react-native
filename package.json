{
  "private": true,
  "version": "0.0.0",
  "name": "bs-react-native-monorepo",
  "license": "MIT",
  "devDependencies": {
    "bs-platform": "^5.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.4.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^3.0.0",
    "prettier": "^1.16.4"
  },
  "scripts": {
    "prerelease": "yarn prepare",
    "release": "lerna publish",
    "format": "yarn format:most && yarn format:re",
    "format:most": "prettier --write \"**/*.{js,json,css,md}\"",
    "format:re": "find . -name \"*.re\" | grep -v \"node_modules\" | xargs bsrefmt --in-place",
    "clean": "lerna exec --concurrency 1 -- yarn clean",
    "test": "lerna exec --concurrency 1 -- yarn test"
  },
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "*.re": [
      "bsrefmt --in-place",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "bs-react-native",
    "bs-react-native-next",
    "bs-react-native-example",
    "react-native-template-reason",
    "website"
  ]
}
